<section class="marketplace-wrapper display-flex">
    {{> marketplace-side-nav}}
    <div class="marketplace-main">
        <div class="create-listing-container">
            <h3>What do you want to sell?</h3>
            <form class="form create-listing-form">
                <div class="form-group">
                    <label for="category-create">Category:</label>
                    <select class="form-control" name="category-create" id="category-create">
                        <option value="category1">TV &amp; Home Theater</option>
                        <option value="category2">Computers &amp; Tablets</option>
                        <option value="category3">Camera, Photo &amp; Video</option>
                        <option value="category4">Cell Phones &amp; Accessories</option>
                        <option value="category5">Headphones &amp; Audio</option>
                        <option value="category6">Car Electronics</option>
                        <option value="category7">Health &amp; Wellness</option>
                        <option value="category8">Wearable Technology</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="name-create">Name:</label>
                    <input class="form-control" type="text" id="name-create" />
                </div>
                <div class="form-group">
                    <label for="price-create">Price:</label>
                    <input class="form-control" type="number" min="0.01" step="0.01" max="50000"
                        pattern="^$\d{1,3}(,\d{3})*(\.\d+)?$" data-type="currency" placeholder="$100.00"
                        id="price-create" />
                </div>
                <div class="form-group">
                    <label for="condition-create">Condition:</label>
                    <select class="form-control" name="condition-create" id="condition-create">
                        <option value="Brand new">Brand new</option>
                        <option value="Excellent">Excellent</option>
                        <option value="Good">Good</option>
                        <option value="Acceptable">Acceptable</option>
                        <option value="For parts or not working">For parts or not working</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="description-create">Description:</label>
                    <textarea class="form-control" name="description-create" id="description-create" cols="30"
                        rows="3"></textarea>
                </div>
                <div class="form-group display-flex justify-space-between align-center">
                    <a class="button-long ml-1" href="/marketplace"><button class="button-2 button-long"
                            type="button">Return</button></a>
                    <button class="button-1 button-long ml-1" type="submit">Create</button>
                </div>
            </form>
        </div>
    </div>
</section>

<script src="/js/createListing.js"></script>