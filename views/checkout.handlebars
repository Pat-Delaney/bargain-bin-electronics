<section class="checkout-wrapper display-flex flex-column align-center">
    <h3>Your cart</h3>
    <div class="checkout-product-container display-flex flex-wrap justify-space-between">

        {{#if cartProducts}}
        <table>
        {{#each cartProducts as |cartProduct|}}
        {{> checkout-card}}
        {{/each}}
        </table>
        {{else}}
        <p>Your cart is empty.</p>
        {{/if}}
        
    </div>
</section>
<div class="total-container">
    Total: 
</div>
<script src="/js/cart.js"></script>
<script src="/js/checkout.js"></script>
