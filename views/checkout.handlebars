<section class="checkout-wrapper wrapper display-flex flex-column align-center">
    <h3>Your cart</h3>
    <div class="checkout-product-container display-flex flex-wrap justify-space-between">
        {{#if cartProducts}}
        <table class="checkout-table">
            <tr>
                <th>NAME</th>
                <th>CONDITION</th>
                <th>PRICE</th>
                <th></th>
            </tr>
            {{#each cartProducts as |cartProduct|}}
            {{> checkout-card}}
            {{/each}}
        </table>
        {{else}}
        <p>Your cart is empty.</p>
        {{/if}}
    </div>
    {{#if cartProducts}}
    <div class="total-container">
        <h3>Total: $<span id="checkout_total"></span></h3>
    </div>
    {{/if}}
</section>
<script src="/js/cart.js"></script>
<script src="/js/checkout.js"></script>