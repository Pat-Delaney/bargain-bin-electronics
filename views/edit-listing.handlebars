<section class="marketplace-wrapper wrapper display-flex">
    {{> marketplace-side-nav}}
    <div class="marketplace-main">
        <div class="create-listing-container">
            <h3>Edit your listing</h3>
            <form class="form create-listing-form">
                <div class="form-group">
                    <label for="category-edit">Category:</label>
                    <select class="form-control" name="category-edit" id="category-edit">
                        <option value="category1" {{#ifEquals "category1" category}}selected{{/ifEquals}}>TV &amp; Home Theater</option>
                        <option value="category2" {{#ifEquals "category2" category}}selected{{/ifEquals}}>Computers &amp; Tablets</option>
                        <option value="category3" {{#ifEquals "category3" category}}selected{{/ifEquals}}>Camera, Photo &amp; Video</option>
                        <option value="category4" {{#ifEquals "category4" category}}selected{{/ifEquals}}>Cell Phones &amp; Accessories</option>
                        <option value="category5" {{#ifEquals "category5" category}}selected{{/ifEquals}}>Headphones &amp; Audio</option>
                        <option value="category6" {{#ifEquals "category6" category}}selected{{/ifEquals}}>Car Electronics</option>
                        <option value="category7" {{#ifEquals "category7" category}}selected{{/ifEquals}}>Health &amp; Wellness</option>
                        <option value="category8" {{#ifEquals "category8" category}}selected{{/ifEquals}}>Wearable Technology</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="name-edit">Name:</label>
                    <input class="form-control" type="text" id="name-edit" value="{{product.name}}" />
                </div>
                <div class="form-group">
                    <label for="price-edit">Price:</label>
                    <input class="form-control" type="number" min="0.01" step="0.01" max="50000"
                        pattern="^$\d{1,3}(,\d{3})*(\.\d+)?$" data-type="currency" placeholder="$100.00" id="price-edit"
                        value="{{product.price}}" />
                </div>
                <div class="form-group">
                    <label for="condition-edit">Condition:</label>
                    <select class="form-control" name="condition-edit" id="condition-edit">
                        <option value="Brand new" {{#ifEquals "Brand new" product.condition}}selected{{/ifEquals}}>Brand new</option>
                        <option value="Excellent" {{#ifEquals "Excellent" product.condition}}selected{{/ifEquals}}>Excellent</option>
                        <option value="Good" {{#ifEquals "Good" product.condition}}selected{{/ifEquals}}>Good</option>
                        <option value="Acceptable" {{#ifEquals "Acceptable" product.condition}}selected{{/ifEquals}}>Acceptable</option>
                        <option value="For parts or not working" {{#ifEquals "For parts or not working" product.condition}}selected{{/ifEquals}}>For parts or not working</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="description-edit">Description:</label>
                    <textarea class="form-control" name="description-edit" id="description-edit" cols="30"
                        rows="3">{{product.description}}</textarea>
                </div>
                <div class="form-group display-flex justify-space-between align-center">
                    <a class="button-long ml-1" href="/marketplace"><button class="button-2 button-long"
                            type="button">Return</button></a>
                    <button class="edit-product-button button-1 button-long ml-1" type="submit" data-id="{{product.id}}">Edit</button>
                </div>
            </form>
        </div>
    </div>
</section>

<script src="/js/editListing.js"></script>